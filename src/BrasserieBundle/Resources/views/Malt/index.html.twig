{% extends '::base.html.twig' %}

{% block title %}Malts{% endblock %}

{% block body -%}
    <h1>Malt list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Ebc</th>
                <th>Quantite</th>
                <th>Saveur</th>
                <th>Description</th>
                <th>Commentaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('malt_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.ebc }}</td>
                <td>{{ entity.quantite }}</td>
                <td> {{ UtilsService.getConcatenateTagsInLine(entity.saveurs, ", ") }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.commentaire }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('malt_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('malt_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('malt_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
