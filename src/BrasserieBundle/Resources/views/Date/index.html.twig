{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Date list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Brassage</th>
                <th>Ajoutlevure</th>
                <th>Miseaufroid</th>
                <th>Embouteillage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('date_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.brassage %}{{ entity.brassage|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.ajoutLevure %}{{ entity.ajoutLevure|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.miseAuFroid %}{{ entity.miseAuFroid|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.embouteillage %}{{ entity.embouteillage|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('date_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('date_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('date_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
